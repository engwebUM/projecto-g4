<div class='row'>
  <div class='form-group date col-md-2 col-lg-2'>
    <%= f.label :date %>
    <%= f.text_field :date, class: 'form-control date', id: 'datepicker' %>
  </div>
  
  <div class="col-md-12"></div>

  <div class='form-group cold-md-4 col-lg-4'>
    <%= f.label 'Category' %>
    <%= f.select(:category_id, @categories.collect { |c| [c.name, c.id] }, { prompt: 'Select a category' }, { class: 'form-control selectpicker' } ) %>
  </div>

  <div class="col-md-12"></div>

  <div class='form-group col-md-6 col-lg-6'>
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="col-md-12"></div>

  <div class='form-group col-md-2 col-lg-2'>
    <%= f.label :amount %> (â‚¬)
    <%= f.number_field :amount, class: 'form-control' %>
  </div>

  <div class="col-md-12"></div>

  <div class='form-group col-md-4 col-lg-4'>
    <%= f.label :document %>
    <%= f.file_field :document, class: 'form-control' %>
  </div>

  <div class="col-md-12"></div>

  <div class='form-group col-md-2 col-lg-2'>
    <%= f.submit 'Save', class: 'form-control btn btn-login' %>
  </div>
</div>

<script>
$(function() {
    $( "#datepicker" ).datepicker({
      dateFormat: "dd-mm-yy"
    });
  });
</script>
