<div class="container login_square">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-12">
								<a href="#" class="active" id="login-form-link">LOGIN</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
									<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
									<div class="form-group">
										<%= f.email_field :email, autofocus: true, :class => "form-control", :id => "username", :placeholder => "Email Address" %>
									</div>
									<div class="form-group">
										<%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "password", :placeholder => "Password" %>
									</div>
									<div class="form-group text-center">
										<% if devise_mapping.rememberable? -%>
											<div class="field">
												<%= f.check_box :remember_me %>
										<%= f.label :remember_me, :id => "remember" %>
											</div>
										<% end -%>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
													<div class="actions">
															<%= f.submit "Log in", :id => "login-submit", :class => "form-control btn btn-login" %>
													</div>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
													<%= render "devise/shared/links" %>
												</div>
											</div>
										</div>
									</div>
								<% end %>


								<form id="register-form" action="#" method="post" role="form" style="display: none;">
									<div class="form-group">
										<input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">
									</div>
									<div class="form-group">
										<input type="password" name="confirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
