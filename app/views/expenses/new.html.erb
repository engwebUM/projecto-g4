<p id='notice'>
  <%= notice %>
</p>
  <% if @expense.errors.any? %>
    <div id='error_explanation'>
      <ul>
        <% @expense.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class='row'>
  <div class='box'>
    <div class='col-lg-12'>
      <h2 class='intro-text text-center'>Add Expense</h2>
      <%= form_for @expense do |f| %>
        <%= render partial: 'form',  locals: { f: f } %>
      <% end %>
    </div>
  </div>
</div>
