<p id='notice'>
  <%= notice %>
</p>

<div class='row'>
  <div class='box'>
    <div class='col-lg-12 header'>
      <h2 class='text-center'>
        Expense #<%= @expense.id %>
      </h2>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>User</strong>
        <%= User.find(@expense.user_id).email %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Date</strong>
        <%= @expense.date %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Category</strong>
        <%= @expense.category.name %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Description</strong>
        <%= @expense.description %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Amount</strong>
        <%= @expense.amount %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Document</strong>
      </h4>
      <%= render 'document' %>
    </div>

    <% if current_user == User.find(@expense.user_id) %>
      <br>
      <p class='text-center'>
        <%= link_to edit_expense_path(@expense), { class: 'btn btn-default btn-lg' } do %>
          <span class='glyphicon glyphicon-pencil' aria-hidden = 'true'></span>
          Edit
        <% end %>

        <%= link_to expense_path(@expense), class: 'btn btn-default btn-lg',  method: :delete do %>
          <span class='glyphicon glyphicon-remove'></span>
          Destroy
        <% end %>
      </p>
    <% end %>
  </div>
</div>
