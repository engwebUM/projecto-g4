<% unless smart_listing.empty? %>
  <table class="table">
    <thead>
        <th class="col-md-2"><%= smart_listing.sortable "ID", :id %></th>
        <th class="col-md-3"><%= smart_listing.sortable "Date", :date %></th>
        <th class="col-md-4"><%= smart_listing.sortable "Name", :name %></th>
        <th class="col-md-3"><%= smart_listing.sortable "Amount", :amount %></th>
        <th></th>
    </thead>
    <tbody>
      <% smart_listing.collection.each do |expense| %>
        <tr class="editable">
          <td>
            <%= expense.id %>
          </td>
          <td>
            <%= expense.date %>
          </td>
          <td>
            <%= expense.user.name %>
          </td>
          <td>
            <%= expense.amount %>
          </td>
          <td>
            <%= link_to 'Show', expense %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= smart_listing.paginate %>
  <br><br>
  <%= smart_listing.pagination_per_page_links %>
<% else %>
  <p class="warning">No records!</p>
<% end %>
