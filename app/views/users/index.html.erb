<div>
  <h2>Users</h2>
  <%= form_for(User.new, url: user_invitation_path, html: { class: 'form-inline' }) do |f| %>
    <%= f.text_field :email, placeholder: 'Email' %>
    <%= f.submit 'Invite User', class: 'btn-primary' %>
  <% end %>
  <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user_status(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
