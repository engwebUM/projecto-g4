<div class="header-content">

<p id='notice'>
  <%= notice %>
</p>

<div class='row'>
  <div class='box'>
    <div class='col-lg-12 header'>
      <h2 class='text-center'>
        Revenue #<%= @revenue.id %>
      </h2>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>User</strong>
        <%= @revenue.user.email %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Date</strong>
        <%= @revenue.date %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Category</strong>
        <%= @revenue.category.name %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Description</strong>
        <%= @revenue.description %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Amount</strong>
        <%= @revenue.amount %>
      </h4>
    </div>

    <div class='col-lg-12'>
      <h4 class='text-center'>
        <strong>Document</strong>
      </h4>
      <%= render 'document' %>
    </div>

    <% if current_user == User.find(@revenue.user_id) %>
      <br>
      <p class='text-center'>
        <%= link_to edit_revenue_path(@revenue), { class: 'btn btn-default btn-lg' } do %>
          <span class='glyphicon glyphicon-pencil' aria-hidden = 'true'></span>
          Edit
        <% end %>

        <%= link_to revenue_path(@revenue), class: 'btn btn-default btn-lg',  method: :delete do %>
          <span class='glyphicon glyphicon-remove'></span>
          Destroy
        <% end %>
      </p>
    <% end %>
  </div>
</div>
</div>