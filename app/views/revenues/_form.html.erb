<div class='row'>
  <div class='form-group date col-lg-12'>
    <%= f.label :date %>
    <%= f.text_field :date, class: 'form-control date', id: 'datepicker' %>
  </div>

  <div class='form-group col-lg-12'>
    <%= f.label 'Category' %>
    <%= f.select(:category_id, @categories.collect { |c| [c.name, c.id] }, { prompt: 'Select a category' }, { class: 'form-control selectpicker' } ) %>
  </div>

  <div class='form-group col-lg-12'>
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class='form-group col-lg-12'>
    <%= f.label :amount %>
    <%= f.number_field :amount, class: 'form-control' %>
  </div>

  <div class='form-group col-lg-12'>
    <%= f.label :document %>
    <%= f.file_field :document, class: 'form-control' %>
  </div>

  <div class='form-group col-lg-12 text-center'>
    <%= f.submit 'Save', class: 'btn btn-default' %>
  </div>
</div>

<script>
$(function() {
    $( "#datepicker" ).datepicker({
      dateFormat: "dd-mm-yy"
    });
  });
</script>
