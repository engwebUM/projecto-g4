<% unless smart_listing.empty? %>
<table class="table">
    <thead>
      <th class="col-md-1"><%= smart_listing.sortable "ID", :id %></th>
      <th class="col-md-2"><%= smart_listing.sortable "Date", :date %></th>
      <th class="col-md-3"><%= smart_listing.sortable "Category", :category %></th>
      <th class="col-md-3"><%= smart_listing.sortable "User", :user %></th>
      <th class="col-md-1"><%= smart_listing.sortable "Amount", :amount %></th>
      <th class="col-md-2"></th>
    </thead>
    <tbody>
      <% smart_listing.collection.each do |revenue| %>
      <tr class="editable">
        <td><%= revenue.id %></td>
        <td><%= revenue.date %></td>
        <td><%= revenue.category.name %></td>
        <td><%= revenue.user.name %></td>
        <td><%= revenue.amount %></td>
        <td><%= link_to 'Show', revenue %></td>
      </tr>
      <% end %>
    </tbody>
</table>
  <%= smart_listing.paginate %>
  <br><br>
  <%= smart_listing.pagination_per_page_links %>
<% else %>
  <p class="warning">No records!</p>
<% end %>
