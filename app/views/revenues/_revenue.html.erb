<% unless smart_listing.empty? %>
<table class="table">
    <thead>
      <tr>
        <th class="col-md-2"><%= smart_listing.sortable "ID", :id %></th>
        <th class="col-md-3"><%= smart_listing.sortable "Date", :date %></th>
        <th class="col-md-4"><%= smart_listing.sortable "Email", :email %></th>
        <th class="col-md-3"><%= smart_listing.sortable "Amount", :amount %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% smart_listing.collection.each do |revenue| %>
      <tr class="editable">
        <td>
          <%= revenue.id %>
        </td>
        <td>
          <%= revenue.date %>
        </td>
        <td>
          <%= revenue.user.email %>
        </td>
        <td>
          <%= revenue.amount %>
        </td>
        <td>
          <%= link_to 'Show', revenue %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
  <%= smart_listing.paginate %>
  <br><br>
  <%= smart_listing.pagination_per_page_links %>
<% else %>
  <p class="warning">No records!</p>
<% end %>
