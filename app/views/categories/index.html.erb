<p id="notice"><%= notice %></p>

<%= form_for(@category) do |f| %>
<p>
  <%= f.label :name, 'New Category' %>
  <%= f.text_field :name %>
  <%= f.submit 'Add Category' %>
</p>

<% end %>


<h1>Listing Themes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: @category %>
  </tbody>
</table>
