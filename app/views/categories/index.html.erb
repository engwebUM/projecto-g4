<section>
	<div class="container">
		<p id="notice"><%= notice %></p>

		<%= render partial: 'form' %>

		<% if @categories.count > 0 %>
		<h2>Categories</h2>
			<table class="table table-striped table-bordered table-condensed">
				<thead>
					<tr>
						<th class="col-md-2">Name</th>
						<th class="col-md-2"></th>
					</tr>
				</thead>

				<tbody>
					<%= render partial: @category %>
				</tbody>
			</table>
		<% end %>
	</div>
</section>




